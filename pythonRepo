//while loop Example
command = ""
started = False
while True:
    command = input("> ").lower()
    if command == "start":
        if started:
            print("car is already started")
        else:
            started = True
            print("car Started")
    elif command == "stop":
        if not started:
            print("Car is already stopped")
        else:
            started = False
            print("Car Stopped")
    elif command == "help":
        print("""
    start - to start the car
    stop - to stop the car
    quit - to quit the program
               """)
    elif command == "quit":
        break
else:
    print("I dont understand")


